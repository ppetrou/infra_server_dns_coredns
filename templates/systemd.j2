[Unit]
Description=CoreDNS Service
Requires=NetworkManager-wait-online.service
After=NetworkManager-wait-online.service

[Service]
Type=simple
PIDFile={{ infra_server_dns_coredns_pidfile }}
ExecStart={{ infra_server_dns_coredns_start_cmd }}
ExecStop={{ infra_server_dns_coredns_stop_cmd }}
StandardOutput=append:{{ infra_server_dns_coredns_logile }}
StandardError=append:{{ infra_server_dns_coredns_logile }}

[Install]
WantedBy=multi-user.target